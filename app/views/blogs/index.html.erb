<h2>Listing blogs</h2>

<table width="100%">
  <thead>
    <tr>
      <th>Title</th>
      <th>Published at</th>
      <th># of views</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.published_at %></td>
        <td><%= blog.views %></td>
        <td>
          <%= link_to 'Show', short_blog_path(blog) %>
          <%= link_to 'Edit', edit_blog_path(blog) %>
          <%= link_to 'Discard', blog, method: :delete, data: { confirm: 'Are you sure you want to discard this blog?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blog', new_blog_path, class: 'btn btn-primary' %>
